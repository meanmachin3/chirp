{% block scripts %}
  <script type="text/javascript">
    window.fsTweet = {
      user: {
        id: "{{model.UserId}}",
        name: "{{model.Username}}",
        userFeedToken: "{{model.UserFeedToken}}",
        timelineToken: "{{model.TimelineToken}}"
      },
      stream: {
        apiKey: "{{model.ApiKey}}",
        appId: "{{model.AppId}}"
      }
    }
  </script>
