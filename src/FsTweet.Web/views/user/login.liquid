{% extends "master_page.liquid" %}

{% block head %}
  <title>Login</title>
{% endblock %}

{% block content %}
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-5 well">
        {% if model.Error %}
          <p class="alert alert-danger">
            {{ model.Error.Value }}
          </p>
        {% endif %}
          <!--Upper black Ruban-->
        <div class="ruban">
          <div class="inner-content">
            <div class="logo">
              <a href="/">
                <i class="fab fa-twitter"></i>
                Home
              </a>

            </div>
            <div> About</div>
          </div>
        </div>

        <!--lower block-->
        <div id="sign-up">
          <h2 style="color:#070707;"> Log in to Twitter</h2>
          <form method="POST" action="/login">
            <div class="form-group">
              <label for="exampleInputPassword1" style="color:#070707;">Login</label>
              <input type="text" id="Username" name="Username" class="form-control" value="{{model.Username}}" required>
            </div>

            <div class="form-group">
              <label for="exampleInputPassword1" style="color:#070707;">Password</label>
              <input type="password" id="Password" name="Password" class="form-control" value="{{model.Password}}" required>
            </div>

            <button type="submit" class="btn btn-primary">Log in</button>
          </form>
        </div>
      </div>    
    </div>  
  </div>
{% endblock %}
